<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PlaylistSongs"
    >
        <!-- Single menu item
             Set id, icon and Title for each menu item
        -->
    <item
        android:id="@+id/menu_dwn"
        android:icon="@drawable/download_new"
        android:title="Download" />

    <item
        android:id="@+id/menu_rename"
        android:icon="@drawable/download_new"
        android:title="Rename" />

    <item
        android:id="@+id/menu_share"
        android:icon="@drawable/ic_menu_share"
        android:title="Make Collaborative" />

    <item
        android:id="@+id/menu_private"
        android:icon="@drawable/makeprivate"
        android:title="Make Private"
        android:visible="false" />

    <item
        android:id="@+id/menu_public"
        android:title="Make Public"
        android:visible="false" />

    <item
        android:id="@+id/menu_like"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:icon="@drawable/whiteheart"
        android:title="Like"
        android:visible="false"
        app:showAsAction="always" />

    <item
        android:id="@+id/menu_dislike"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:icon="@drawable/redhearts"
        android:title="Dislike"
        android:visible="false"
        app:showAsAction="always" />

    <item
        android:id="@+id/menu_delete"
        android:icon="@drawable/ic_delete_black_24dp"
        android:title="Delete" />
</menu>
