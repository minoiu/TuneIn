<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nowPlaying"
    android:layout_width="fill_parent"
    android:layout_height="189dp"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="@dimen/feed_item_margin"
    android:layout_marginTop="@dimen/feed_item_margin"
    android:background="@drawable/parent_rounded_corner"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:visibility="visible"
    android:weightSum="1">

    <TextView
        android:id="@+id/name"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="friend name"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/feed_item_profile_name"
        android:textStyle="bold" />

        <include
            android:id="@+id/divider"
            layout="@layout/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:id="@+id/nowPlaying2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_weight="0.01"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/evie_pic"></ImageView>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/nowPlaying3"

                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_profile_info_padd"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Now playing:"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/feed_item_timestamp" />

                <TextView
                    android:id="@+id/songName"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    android:text="song name"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/syncButton"
                android:layout_width="81dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/tunein_new"
                android:elevation="0dp"
                android:onClick="getTimeFromFirebase()"
                android:scaleX="1.2"
                android:scaleY="3"
                android:textAllCaps="false"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/tuneout_btn"
                android:layout_width="81dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@+id/nowPlaying3"
                android:background="@drawable/tuneout"
                android:elevation="0dp"
                android:scaleX="1.2"
                android:scaleY="3"
                android:textAllCaps="false"
                android:visibility="gone" />

        </LinearLayout>

        <include
            android:id="@+id/divider1"
            layout="@layout/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/youtube"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/comment"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:background="@xml/roundcorner"
                android:cropToPadding="true"
                android:onClick="viewOnYoutube"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/youtube" />

            <ImageButton
                android:id="@+id/youtubecoloured"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/comment"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:background="@xml/roundcorner"
                android:cropToPadding="true"
                android:onClick="viewOnYoutubeAgain"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/yt_icon" />

            <ImageButton
                android:id="@+id/download"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/comment"
                android:layout_toRightOf="@+id/youtube"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:minHeight="250dp"
                android:onClick="download"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/download_new" />

            <ImageButton
                android:id="@+id/downloadgreen"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/comment"
                android:layout_toRightOf="@+id/youtube"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:onClick="downloadAgain"
                android:scaleType="centerInside"
                android:tint="@color/colorPrimary"
                android:visibility="invisible"
                app:srcCompat="@drawable/downnewblue" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="false"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:onClick="comment"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/icon" />

            <ImageButton
                android:id="@+id/commentblue"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="160dp"
                android:layout_marginTop="1dp"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/comment_blue" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="false"
                android:layout_centerInParent="false"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/blackHeart"
                android:layout_toRightOf="@+id/comment"
                android:adjustViewBounds="false"
                android:background="@xml/roundcorner"
                android:cropToPadding="true"
                android:onClick="addToPlaylist"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/add" />

            <ImageButton
                android:id="@+id/addgreen"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/blackHeart"
                android:layout_toRightOf="@+id/comment"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:onClick="addToPlaylistAgain"
                android:scaleType="fitCenter"
                android:tint="@color/colorPrimaryDark"
                android:visibility="invisible"
                app:srcCompat="@drawable/plusblue" />

            <ImageButton
                android:id="@+id/blackHeart"
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37dp"
                android:layout_marginTop="6dp"
                android:background="@xml/roundcorner"
                android:backgroundTint="@color/cardview_light_background"
                android:cropToPadding="false"
                android:onClick="likeSong"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/dislike" />

            <ImageButton
                android:id="@+id/redHeart"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37dp"
                android:layout_marginTop="6dp"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:onClick="dislikeSong"
                android:scaleType="fitCenter"
                android:tint="@android:color/holo_red_dark"
                android:visibility="gone"
                app:srcCompat="@drawable/like" />


        </RelativeLayout>

</LinearLayout>