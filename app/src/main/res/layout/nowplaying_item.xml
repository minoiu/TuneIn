<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nowPlaying"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/nowPlaying1"


        android:layout_width="fill_parent"
        android:layout_height="189dp"

        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/name"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.02"
            android:text="friend name"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textSize="@dimen/feed_item_profile_name" />

        <include
            android:id="@+id/divider"
            layout="@layout/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:id="@+id/nowPlaying2"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_weight="0.01"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/evie_pic"></ImageView>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/nowPlaying3"

                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_profile_info_padd"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Now playing:"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/feed_item_timestamp" />

                <TextView
                    android:id="@+id/songName"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    android:text="song name"
                    android:textAllCaps="false" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/syncButton"
                android:layout_width="95dp"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/nowPlaying3"
                android:layout_weight="0.01"
                android:background="@drawable/newbutton"
                android:elevation="0dp"
                android:onClick="getTimeFromFirebase()"
                android:scaleX="1.2"
                android:scaleY="3"
                android:textAllCaps="false" />

        </LinearLayout>

        <include
            android:id="@+id/divider1"
            layout="@layout/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/youtube"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/syncButton"
                android:background="@xml/roundcorner"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/youtube" />

            <ImageButton
                android:id="@+id/download"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/youtube"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/download_new" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/download"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/comment"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/plus" />

            <ImageButton
                android:id="@+id/love"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="false"
                android:layout_gravity="right"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/comment"
                android:layout_weight="0.00"
                android:background="@xml/roundcorner"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/heart" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>